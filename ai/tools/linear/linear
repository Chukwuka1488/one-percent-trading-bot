#!/usr/bin/env bash
# Wrapper script for linear-cli.ts that ensures direnv environment is loaded

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
PROJECT_ROOT="$(cd "$SCRIPT_DIR/../../.." && pwd)"

# Load direnv environment if available
if command -v direnv &> /dev/null && [ -f "$PROJECT_ROOT/.envrc" ]; then
  eval "$(direnv export bash 2>/dev/null)"
fi

# Run the Linear CLI
exec npx tsx "$SCRIPT_DIR/linear-cli.ts" "$@"
