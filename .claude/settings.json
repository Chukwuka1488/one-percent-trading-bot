{
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|MultiEdit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "jq -r '.tool_input.file_path' | grep '\\.md$' | xargs -r npx prettier --write"
          }
        ]
      }
    ]
  },
  "includeCoAuthoredBy": false
}
